    <link name="tof">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.01"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.01" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    
    <joint name="tof_joint" type="fixed">
        <parent link="chassis"/>
        <child link="tof"/>
        <origin xyz="0.192 0.0 0.06" rpy="0 0 0"/>
    </joint>

    <link name="tof_1">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.01"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.01" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    
    <joint name="tof_joint_1" type="fixed">
        <parent link="chassis"/>
        <child link="tof_1"/>
        <origin xyz="0.192 0.148 0.06" rpy="0 0 ${pi/4}"/>
    </joint>

    <link name="tof_2">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.01"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.01" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    
    <joint name="tof_joint_2" type="fixed">
        <parent link="chassis"/>
        <child link="tof_2"/>
        <origin xyz="0.192 -0.148 0.06" rpy="0 0 -${pi/4}"/>
    </joint>

    <gazebo reference="tof">
        <material>Gazebo/Red</material>
        <sensor name="tof" type="ray">
            <always_on>true</always_on>
            <visualize>true</visualize>
            <pose>0.0 0 0.0 0 0 0</pose>
            <update_rate>15</update_rate>
            <ray>
              <scan>
                    <horizontal>
                        <samples>5</samples>
                        <resolution>1.00</resolution>
                        <min_angle>-0.18</min_angle>
                        <max_angle>0.18</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>5</samples>
                        <resolution>1.00</resolution>
                        <min_angle>-0.01</min_angle>
                        <max_angle>0.01</max_angle>
                    </vertical>
              </scan>
              <range>
                    <min>0.3</min>
                    <max>12</max>
                    <resolution>0.01</resolution>
              </range>
              <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
              </noise>
            </ray>
            <plugin name="bytes_laserscan" filename="libgazebo_ros_ray_sensor.so">
              <ros>
                  <namespace>distance</namespace>
                <remapping>~/out:=range</remapping>
              </ros>
              <output_type>sensor_msgs/Range</output_type>
              <frame_name>tof</frame_name>
            </plugin>
        </sensor>
    </gazebo>

